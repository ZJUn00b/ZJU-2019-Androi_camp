<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".recyclerview.recyclerview_activity">

    <LinearLayout android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingTop="20dp"
        android:paddingBottom="20dp"
        android:background="@color/background">

        <Button
            android:id="@+id/bt_insert"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="插入"
            android:textColor="@color/colorAccent"
            android:textSize="13sp"/>

        <Button
            android:id="@+id/bt_insert_range"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="批量增"
            android:textColor="@color/colorAccent"
            android:textSize="13sp"/>

        <Button
            android:id="@+id/bt_delete"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="删除"
            android:textColor="@color/colorAccent"
            android:textSize="13sp"/>

        <Button
            android:id="@+id/bt_delete_range"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="批量删"
            android:textColor="@color/colorAccent"
            android:textSize="13sp"/>

        <Button
            android:id="@+id/bt_change"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="修改"            android:textColor="@color/colorAccent"
            android:textSize="13sp"
            />

        <Button
            android:id="@+id/bt_back"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="返回"
            android:textColor="@color/colorAccent"
            android:textSize="13sp"/>

    </LinearLayout>

    <android.support.v7.widget.AppCompatImageView
        android:layout_width="wrap_content"
        android:layout_height="225dp"
        android:background="@color/background"
        android:src="@drawable/head"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="更新于： 7月9日 18:40"
        android:textColor="@color/HotValue"
        android:background="@color/background"
        android:padding="6dp"
        />
    <android.support.v7.widget.RecyclerView
        android:id="@+id/rl_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

</LinearLayout>